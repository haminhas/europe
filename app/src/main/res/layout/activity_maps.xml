<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="0.95">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="boysenberry.europe.MapsActivity"
        tools:layout="@layout/abc_action_bar_title_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:id="@+id/layoutSpinner">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCountry"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:id="@+id/layoutInformation"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dip"
                            android:layout_weight="0.33333"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Country Name"
                            android:id="@+id/textCountryName"
                            android:layout_gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dip"
                            android:layout_weight="0.33333"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Country Capital"
                            android:id="@+id/textCountryCapital"
                            android:layout_gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dip"
                            android:layout_weight="0.33333"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Country Population"
                            android:id="@+id/textCountryPopulation"
                            android:layout_gravity="right" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="100dip"
                        android:layout_height="100dp"
                        android:id="@+id/imageCountryFlag"
                        android:layout_alignParentTop="true"
                        android:onClick="closeButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Year"
                        android:id="@+id/textYear" />

                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarYear" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">


                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="fill_parent"
                            android:layout_height="300dp"
                            android:id="@+id/mChart2"
                            android:layout_weight="30" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/layoutChart" >

                            <com.github.mikephil.charting.charts.PieChart
                                android:layout_width="0dip"
                                android:layout_height="300dp"
                                android:id="@+id/mChart1"
                                android:layout_weight="30" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.github.mikephil.charting.charts.PieChart
                                android:layout_width="0dip"
                                android:layout_height="300dp"
                                android:id="@+id/mChart3"
                                android:layout_weight="30" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
